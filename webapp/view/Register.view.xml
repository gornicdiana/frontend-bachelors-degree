<mvc:View controllerName="licenta.controller.Register"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Page id = "register" title="Register" class="sapUiResponsiveContentPadding">
        <content>
            <VBox id="registerVBoxID" class="sapUiResponsiveMargin" alignItems = "Center">
                <core:Icon id="customerIconID" src="sap-icon://customer" size="2.5rem"/>
                <Text id="titleID" text="Register" />
                <VBox id="formVBoxID" width = "30%">
                    <HBox id="nameHBoxID" justifyContent = "SpaceBetween">
                        <VBox id="nameVBoxID" class ="sapUiTinyMarginEnd">
                            <Label
                                id="firstNameLabelID" 
                                class = "sapUiSmallMarginTop" labelFor="firstNameInput"
                                text = "Matricol Number"/>
                            <Input id="firstNameInput"
                                required = "true" placeholder="Matricol Number..." valueStateText="{i18n>registerFirstNameStateValueText}" value=""
                                change = "" />
                        </VBox>
                        <VBox id="lastnameVBoxID">
                            <Label 
                                id="lastNameLabelID"
                                class = "sapUiSmallMarginTop" labelFor="lastNameInput"
                                text = "Username"/>
                            <Input id="lastNameInput"                   
                                required = "true" placeholder="Username..." valueStateText="{i18n>registerLastNameStateValueText}"
                                value =""
                                change = "" />
                        </VBox>
                    </HBox>
                    <Label 
                        id="emailLabelID"
                        class = "sapUiSmallMarginTop" labelFor="emailInput"
                        text = "Email"/>
                    <Input id="emailInput"
                        required = "true" placeholder="Email..." valueStateText="{i18n>registerEmailStateValueText}"
                        value = ""
                        change = "" />
                    <Label 
                        id="passwordLabelID"
                        class = "sapUiSmallMarginTop" labelFor="passwordInput"
                        text = "Password"/>
                    
                    <Input id="passwordInput" type="Password"
                        required = "true" placeholder="Password..." valueStateText="{i18n>registerPasswordStateValueText}"
                        value = ""
                        change = "" />

                    <Input id="confirmPasswordInput" type="Password"
                        required = "true" placeholder="Confirm your password..." valueStateText="{i18n>registerConfirmPasswordStateValueText}"
                        value = ""
                        liveChange = "" />
                </VBox>
                <Link
                    id="registerLinkID"
                    class = "smallLabel" text="Already have an account?"
                    press = "goToLogin"/>
                <Button
                    id="registerButtonID"
                    type = "Emphasized"
                    text = "Register"
                    class = "sapUiSmallMarginTop"
                    press = "goToHome">
                </Button>
            </VBox>
        </content>
    </Page>
</mvc:View>