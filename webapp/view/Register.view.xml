<mvc:View controllerName="licenta.controller.Register"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Page id="register" title="Register" class="sapUiResponsiveContentPadding">
        <content>
            <VBox class="sapUiResponsiveMargin" alignItems = "Center">
                <core:Icon src="sap-icon://customer" size="2.5rem"/>
                <Text text="Register" />
                <VBox width = "30%">
                    <HBox justifyContent = "SpaceBetween">
                        <VBox class ="sapUiTinyMarginEnd">
                            <Label 
                                class = "sapUiSmallMarginTop" labelFor="registrationNumberInput"
                                text = "Matricol Number"/>
                            <Input id="registrationNumberInput"
                                required = "true" placeholder="Matricol Number..." valueStateText="{i18n>registerFirstNameStateValueText}" value="{registerModel>/registrationNumber}"
                                change = "" />
                        </VBox>
                        <VBox>
                            <Label
                                class = "sapUiSmallMarginTop" labelFor="usernameInput"
                                text = "Username"/>
                            <Input id="usernameInput"                   
                                required = "true" placeholder="Username..." valueStateText="{i18n>registerLastNameStateValueText}"
                                value ="{registerModel>/username}"
                                change = "" />
                        </VBox>
                    </HBox>
                    <Label
                        class = "sapUiSmallMarginTop" labelFor="emailInput"
                        text = "Email"/>
                    <Input id="emailInput"
                        required = "true" placeholder="Email..." valueStateText="{i18n>registerEmailStateValueText}"
                        value = "{registerModel>/email}"
                        change = "" />
                    <Label
                        class = "sapUiSmallMarginTop" labelFor="passwordInput"
                        text = "Password"/>

                    <Input id="passwordInput" type="Password"
                        required = "true" placeholder="Password..." valueStateText="{i18n>registerPasswordStateValueText}"
                        value = "{registerModel>/password}"
                        change = "" />

                    <Input id="confirmPasswordInput" type="Password"
                        required = "true" placeholder="Confirm your password..." valueStateText="{i18n>registerConfirmPasswordStateValueText}"
                        value = "{registerModel>/confirmPassword}"
                        liveChange = "" />
                </VBox>
                <Link id="registerLinkID"
                    class = "smallLabel" text="Already have an account?"
                    press = "goToLogin"/>
                <Button
                    type = "Emphasized"
                    text = "Register"
                    class = "sapUiSmallMarginTop"
                    press = "onRegisterUser">
                </Button>
            </VBox>
        </content>
    </Page>
</mvc:View>