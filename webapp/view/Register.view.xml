<mvc:View controllerName="mealprapp.controller.Register"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Page id = "register" title="{i18n>register}" class="sapUiResponsiveContentPadding" titleAlignment="Center">
        <content>
            <VBox class="sapUiResponsiveMargin" 
				alignItems = "Center">
                <core:Icon src="sap-icon://customer" size="2.5rem"/>
                <Text text = "{i18n>registerFormTitle}" />
                <VBox width = "30%">
                    <HBox  justifyContent = "SpaceBetween">
                        <VBox class ="sapUiTinyMarginEnd">
                            <Label 
                                class = "sapUiSmallMarginTop" labelFor="firstNameInput"
                                text = "{i18n>registerFirstNameText}"/>
                            <Input id="firstNameInput"
                                required = "true" placeholder="{i18n>registerFirstNamePlaceholder}" valueStateText="{i18n>registerFirstNameStateValueText}" value=""
                                change = "" />
                        </VBox>
                        <VBox>
                            <Label 
                                class = "sapUiSmallMarginTop" labelFor="lastNameInput"
                                text = "{i18n>registerLastNameText}"/>
                            <Input id="lastNameInput"                   
                                required = "true" placeholder="{i18n>registerLastNamePlaceholder}" valueStateText="{i18n>registerLastNameStateValueText}"
                                value =""
                                change = "" />
                        </VBox>
                    </HBox>
                    <Label 
                        class = "sapUiSmallMarginTop" labelFor="emailInput"
                        text = "{i18n>registerEmailText}"/>
                    <Input id="emailInput"
                        required = "true" placeholder="{i18n>registerEmailPlaceholder}" valueStateText="{i18n>registerEmailStateValueText}"
                        value = ""
                        change = "" />
                    <Label 
                        class = "sapUiSmallMarginTop" labelFor="passwordInput"
                        text = "{i18n>registerPasswordText}"/>
                    <Label text="{i18n>registerPasswordInstructions}" wrapping="true" />
                    <Input id="passwordInput" type="Password"
                        required = "true" placeholder="{i18n>registerPasswordPlaceholder}" valueStateText="{i18n>registerPasswordStateValueText}"
                        value = ""
                        change = "" />

                    <Input id="confirmPasswordInput" type="Password"
                        required = "true" placeholder="{i18n>registerConfirmPasswordPlaceholder}" valueStateText="{i18n>registerConfirmPasswordStateValueText}"
                        value = ""
                        liveChange = "" />
                </VBox>
                <Link
                    class = "smallLabel" text="{i18n>registerLinkText}"
                    press = ""/>
                <Button
                    type = "Emphasized"
                    text = "{i18n>registerButtonText}"
                    class = "sapUiSmallMarginTop"
                    press = "">
                </Button>
            </VBox>
        </content>
    </Page>
</mvc:View>