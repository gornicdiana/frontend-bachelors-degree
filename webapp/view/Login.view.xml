<mvc:View controllerName="licenta.controller.Login"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards">

	<Page id="loginPage" class="sapUiResponsiveContentPadding backgroundClass" title="Login" titleAlignment="Center" showNavButton="true" navButtonPress="onGoBackToWelcome">
		<content>
			<VBox alignItems="Center" width="100%" height="100%">
				<f:Card class="sapUiMediumMargin cardClass" width="500px" height="600px">
					<f:content>
						<VBox id="formVBox" alignItems="Center" justifyContent="Center" class="sapUiLargeMarginTop" width="100%" height="100%">
							<core:Icon src="sap-icon://customer" size="2.5rem"/>
							<Label text="Login"/>
							<VBox id="inputsVBox" class="sapUiSmallMargin" justifyContent="Center" alignItems="Center" width="100%">
								<Label id="emailLabelID" class="sapUiSmallMarginTop" text="Email"/>
								<Input id="emailInputID" class="sapUiTinyMarginTop" type="Email" placeholder="{i18n>emailInput}" value="{loginModel>/email}" width="250px"/>
								<Label id="passwordLabelID" class="sapUiSmallMarginTop" text="Password"/>
								<Input id="passwordInputID" class="sapUiTinyMarginTop" type="Password" placeholder="{i18n>passwordInput}" value="{loginModel>/password}" width="250px"/>
							</VBox>
							<VBox id="buttonsHBox" alignItems="Center" class="sapUiSmallMargin" width="100%" height="100%">
								<Label id="registerLabelID" text="{i18n>registerText}"/>
								<Button id="registerButton" type="Transparent" text="Register" press="goToRegister"/>
								<Button id="loginButton" type="Emphasized" text="Login" press="pressToLogin" class="sapUiTinyMarginTop"/>
							</VBox>
						</VBox>
					</f:content>
				</f:Card>
			</VBox>
		</content>
	</Page>
</mvc:View>