<mvc:View controllerName="licenta.controller.HomeTherapist"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f">

    <SplitApp id="homeSplitAppID">
        <detailPages>
            <Page id="myArticlesSplitID" title="My Articles" class="allBackground">
                <headerContent>
                    <Button text="Add Article" type="Emphasized" press="onPressAddArticle"/>
                </headerContent>
                <content>
                    <c:Fragment id="articleTherapistFragmentID" fragmentName="licenta.view.fragments.ArticleTherapistCard" type="XML" />
                </content>
            </Page>
            <Page id="myCalendarSplitID" title="My Calendar">
                <content>
                    <c:Fragment id="calendarTherapistFragmentID" fragmentName="licenta.view.fragments.Calendar" type="XML" />
                </content>
            </Page>
            <Page id="myProfileSplitID" title="My Profile">
                <!-- <headerContent>
                    <Button text="Logout" type="Emphasized" press="onPressLogout"/>
                </headerContent> -->
                <FlexBox justifyContent="Center">
                    <f:Card class="sapUiMediumMargin" width="40rem" height="30rem">
                        <f:header >
                            <card:Header title="{i18n>myAccountDetails}" iconSrc="sap-icon://employee" />
                        </f:header>
                        <f:content>
                            <VBox alignItems="Start" width="100%" class="sapUiMediumMargin">
                                <VBox>
                                    <HBox justifyContent="Start" alignItems="Center" class="sapUiTinyMarginTop">
                                        <FormattedText htmlText="{therapistCardModel>/fisrtnameLabel}" class="sapUiSmallMarginEnd"/>
                                        <FormattedText htmlText="{therapistModel>/firstname}"/>

                                    </HBox>
                                    <HBox justifyContent="Start" alignItems="Center" class="sapUiTinyMarginTop">
                                        <FormattedText htmlText="{therapistCardModel>/lastnameLabel}" class="sapUiSmallMarginEnd"/>
                                        <FormattedText htmlText="{therapistModel>/lastname}"/>
                                    </HBox>
                                    <HBox justifyContent="Start" alignItems="Center" class="sapUiTinyMarginTop">
                                        <FormattedText htmlText="{therapistCardModel>/phone}" class="sapUiSmallMarginEnd"/>
                                        <FormattedText htmlText="{therapistModel>/phone}"/>
                                    </HBox>
                                </VBox>
                                <FormattedText htmlText="{therapistCardModel>/description}" class="sapUiTinyMarginTop"/>
                                <TextArea value="{therapistModel>/info}" width="30rem" height="10rem" class="sapUiTinyMarginTop"/>
                                <HBox justifyContent="Center" alignItems="Center" class="sapUiSmallMarginTop">
                                    <Button text="{i18n>updateProfileButton}" press="onPressUpdateProfileButton" class="sapUiSmallMarginEnd"/>
                                    <Button text="Logout" type="Emphasized" press="onPressLogout" />
                                </HBox>

                            </VBox>
                        </f:content>
                    </f:Card>
                </FlexBox>
            </Page>
        </detailPages>
        <masterPages>
            <Page backgroundDesign="List">
                <List itemPress=".onListItemPress">
                    <items>
                        <StandardListItem id="myArticlesListID" title="My Articles" type="Active" custom:to="myArticlesSplitID"/>
                        <StandardListItem id="myCalendarListID" title="My Calendar" type="Active" custom:to="myCalendarSplitID"/>
                        <StandardListItem id="myProfileListID" title=" My Profile" type="Active" custom:to="myProfileSplitID"/>
                    </items>
                </List>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>
