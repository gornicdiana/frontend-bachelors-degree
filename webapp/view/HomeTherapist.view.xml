<mvc:View controllerName="licenta.controller.HomeTherapist"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f">

    <SplitApp id="homeSplitAppID" class="therapistHeader">
        <detailPages>
            <Page id="myArticlesSplitID" title="My Articles" class="homeBackgroundClass">
                <headerContent>
                    <Button text="Add Article" type="Emphasized" press="onPressAddArticle"/>
                </headerContent>
                <content>
                    <c:Fragment id="articleTherapistFragmentID" fragmentName="licenta.view.fragments.ArticleTherapistCard" type="XML" />
                </content>
            </Page>
            <Page id="myCalendarSplitID" title="My Calendar" class="homeBackgroundClass">
                <content>
                    <c:Fragment id="calendarTherapistFragmentID" fragmentName="licenta.view.fragments.Calendar" type="XML" />
                </content>
            </Page>
            <Page id="myProfileSplitID" title="My Profile" class="homeBackgroundClass">
                <content>
                    <c:Fragment id="therapistProfileFragmentID" fragmentName="licenta.view.fragments.TherapistProfile" type="XML" />
                </content>
            </Page>
        </detailPages>
        <masterPages>
            <Page backgroundDesign="List" class="splitMenu">
                <List itemPress=".onListItemPress">
                    <items>
                        <StandardListItem id="myArticlesListID" title="My Articles" type="Active" custom:to="myArticlesSplitID" class="splitButton"/>
                        <StandardListItem id="myCalendarListID" title="My Calendar" type="Active" custom:to="myCalendarSplitID" class="splitButton"/>
                        <StandardListItem id="myProfileListID" title=" My Profile" type="Active" custom:to="myProfileSplitID" class="splitButton"/>
                    </items>
                </List>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>
