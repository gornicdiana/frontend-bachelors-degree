<mvc:View controllerName="licenta.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <SplitApp id="homeSplitAppID" class="splitClass">
        <detailPages>
            <Page id="articlesSplitID" title="Articles" class="articlePageClass homeBackgroundClass">
                <HBox width="100%" class="sapUiSmallMargin">
                    <Button class="allButtonClass" text="All" press="onPressAll"/>
                    <Toolbar id="toolbar" content="{category>/Categories}" width="100%">
                        <Button text="{category>name}" press="onPressCategoryLabel"/>
                    </Toolbar>
                </HBox>
                <c:Fragment id="articleFragmentID" fragmentName="licenta.view.fragments.ArticleCard" type="XML" />
            </Page>
            <Page id="therapistsSplitID" title="All Therapists" class="homeBackgroundClass">
                <c:Fragment id="therapistFragmentID" fragmentName="licenta.view.fragments.TherapistCard" type="XML" />
            </Page>
            <Page id="accountSplitID" title="Account" class="homeBackgroundClass">
                <headerContent>
                    <Button text="Logout" type="Emphasized" press="onPressLogout"/>
                </headerContent>
                <c:Fragment id="articleFragmentID" fragmentName="licenta.view.fragments.AccountCards" type="XML" />
            </Page>
        </detailPages>
        <masterPages>
            <Page id="masterHome" backgroundDesign="List" class="splitMenu">
                <List id="listHomeID" itemPress=".onListItemPress">
                    <items>
                        <StandardListItem id="articlesListID" title="Articles" type="Active" custom:to="articlesSplitID" class="splitButton"/>
                        <StandardListItem id="therapistsListID" title=" All Therapists" type="Active" custom:to="therapistsSplitID" class="splitButton"/>
                        <StandardListItem id="accountListID" title="Account" type="Active" custom:to="accountSplitID" class="splitButton"/>
                    </items>
                </List>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>
