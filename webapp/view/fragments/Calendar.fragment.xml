<core:FragmentDefinition controllerName="sap.m.sample.SinglePlanningCalendarCreateApp.Page"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:unified="sap.ui.unified"
    xmlns="sap.m">

    <VBox class="sapUiSmallMargin">
        <SinglePlanningCalendar id="myCalendar" title= "My Calendar" appointmentSelect="" headerDateSelect="" startDateChange="" startDate="" appointments="">
            <actions>
                <Button id="addNewAppointment" text="Create" press="AonppointmentCreate"/>
            </actions>
            <appointments>
                <unified:CalendarAppointment title= "{title}" text= "{text}" type= "{type}" icon= "{icon}" startDate= "{startDate}" endDate= "{endDate}">
                </unified:CalendarAppointment>
            </appointments>
        </SinglePlanningCalendar>
    </VBox>

</core:FragmentDefinition>
