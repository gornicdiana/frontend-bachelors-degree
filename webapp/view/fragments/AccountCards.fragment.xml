<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:grid="sap.ui.layout.cssgrid">

    <f:GridList id="therapistCardID" items="{appointmentModel>/}">
        <f:customLayout>
            <grid:ResponsiveColumnLayout />
        </f:customLayout>
        <f:GridListItem class="sapUiSmallMargin">
            <f:layoutData>
                <grid:ResponsiveColumnItemLayoutData columns="4" rows="4" />
            </f:layoutData>
            <VBox>
                <f:Card>
                    <f:header>
                        <card:Header title="{appointmentModel>name}"/>
                    </f:header>
                    <f:content>
                        <VBox class="sapUiSmallMargin" alignItems="Start">
                            <Label text="Therapist: {appointmentModel>therapist}"/>
                            <Label text="Date: {appointmentModel>startDate}"/>
                            <Label text="Category: {appointmentModel>category}"/>
                        </VBox>
                    </f:content>
                </f:Card>
            </VBox>
        </f:GridListItem>
    </f:GridList>
</core:FragmentDefinition>