<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <ResponsivePopover id="detailsPopover" title="Appointment" class="sapUiResponsivePadding--header" placement="Auto">
        <beginButton>
            <Button text="Accept" type="Emphasized" press="onAcceptAppointment"/>
        </beginButton>
        <endButton>
            <Button text="Deny" press=""/>
        </endButton>
        <f:SimpleForm id="appointmentEditForm" editable="false" layout="ResponsiveGridLayout" singleContainerFullSize="false">
            <Label text="Name" labelFor="moreInfoText"/>
            <Text id="moreInfoText" text="{appointmentDetailsModel>/name}"/>
            <Label text="From" labelFor="startDateText"/>
            <Text id="startDateText" text="{appointmentDetailsModel>/startDate}"/>
            <Label text="To" labelFor="endDateText"/>
            <Text id="endDateText" text="{appointmentDetailsModel>/endDate}"/>
            <Input placeholder="{i18n>enterLink}" value="{appointmentDetailsModel>/link}"/>
        </f:SimpleForm>
    </ResponsivePopover>
</core:FragmentDefinition>
