<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="createAppointmentDialogID" title="Title">
        <beginButton>
            <Button text="OK" type="Emphasized" press="onSaveNewAppointment"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelNewAppointment"/>
        </endButton>
        <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout" singleContainerFullSize="false">
                <Label text="Title"/>
                <Input id="appTitle" value="{appointmentModel>/name}"/>
                <ComboBox id="therapistsComboBoxID" items="{therapistModel>/}" change="onGetSelectedItem">
                    <core:Item text="{therapistModel>lastname} {therapistModel>firstname}"/>
                </ComboBox>
                <Label text="From"/>
                <DateTimePicker required="true" displayFormat="short" change="handleDateTimePickerChange" value="{appointmentModel>/startDate}"/>
                <Label text="To"/>
                <DateTimePicker required="true" displayFormat="short" change="handleDateTimePickerChange" value="{appointmentModel>/endDate}"/>
                <Label text="Category"/>
                <ComboBox id="categoriesComboBoxID" items="{category>/Categories}" change="onGetSelectedItem">
                    <core:Item key="{category>key}" text="{category>name}"/>
                </ComboBox>
            </f:SimpleForm>
        </l:VerticalLayout>
    </Dialog>
</core:FragmentDefinition>