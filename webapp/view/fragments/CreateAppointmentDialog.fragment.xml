<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="createAppointmentDialogID" title="Title">
        <beginButton>
            <Button text="OK" type="Emphasized" press="onSaveNewAppointment"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelNewAppointment"/>
        </endButton>
        <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout" singleContainerFullSize="false">
                <Label text="Title"/>
                <Input id="appTitle"/>
                <Label text="From" labelFor="startDate"/>
                <DateTimePicker id="DTPStartDate" required="true" visible="{= !${allDay>/allDay}}" change="handleDateTimePickerChange" valueFormat="dd/MM/yyyy, hh:mm aa"/>
                <Label text="To" labelFor="endDate"/>
                <DateTimePicker id="DTPEndDate" required="true" visible="{= !${allDay>/allDay}}" change="handleDateTimePickerChange"/>
                <Label text="Category"/>
                <ComboBox id="categoriesComboBoxID" items="{category>/Categories}" change="onGetSelectedItem">
                    <core:Item key="{category>key}" text="{category>name}"/>
                </ComboBox>
            </f:SimpleForm>
        </l:VerticalLayout>
    </Dialog>
</core:FragmentDefinition>