<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog id="addArticleDialogID" class="sapUiSmallMarginBeginEnd" title="Add an Article">
        <buttons>
            <Button text="{i18n>Save}" press="onSaveArticle" type="Emphasized"/>
            <Button text="{i18n>Cancel}" press="onCloseDialog" />
        </buttons>
        <VBox width="700px">
            <VBox class="sapUiTinyMarginBeginEnd sapUiTinyMarginTopBottom">
                <Label text="Title"/>
                <TextArea width="100%" placeholder="Add a title..." value="{articleModel>/title}"/>
            </VBox>
            <VBox class="sapUiTinyMarginBeginEnd sapUiTinyMarginTopBottom">
                <Label text="Labels"/>
                <ComboBox id="categoriesComboBoxID" items="{category>/Categories}" change="onGetSelectedItem" placeholder="Choose a category...">
                    <core:Item key="{category>key}" text="{category>name}" class="categoryClass"/>
                </ComboBox>
            </VBox>
            <VBox class="sapUiTinyMarginBeginEnd sapUiTinyMarginTopBottom">
                <Label text="Content"/>
                <TextArea width="100%" value="{articleModel>/body}" placeholder="Add content..."/>
            </VBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>